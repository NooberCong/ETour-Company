@model Booking

@{
    ViewData["Title"] = $"Edit Booking No.{Model.ID}";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
    <h1 class="h2">Edit Booking No.@Model.ID</h1>
</div>

<form method="post" class="col-md-8 pl-0">
    <input type="hidden" asp-for="@Model.ID" />
    <div class="form-group">
        <label asp-for="Status"></label>
        <select class="form-control" asp-for="Status">
            @foreach (Booking.BookingStatus status in Model.GetPossibleNextStatuses())
            {
                <option value="@((int)status)">@status</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ContactName"></label>
        <input class="form-control" asp-for="ContactName" />
        <span asp-validation-for="ContactName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail"></label>
        <input class="form-control" asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactPhone"></label>
        <input class="form-control" asp-for="ContactPhone" />
        <span asp-validation-for="ContactPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactAddress"></label>
        <input class="form-control" asp-for="ContactAddress" />
        <span asp-validation-for="ContactAddress" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a class="btn btn-secondary" asp-action="Index"><span data-feather="arrow-left"></span> Back to list</a>
    <button type="submit" class="btn btn-primary"><span data-feather="save"></span> Save Booking</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}