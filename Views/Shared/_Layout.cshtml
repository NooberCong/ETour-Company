@using Company.Views.Shared;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETourCorp</title>
    <link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
</head>
<body onresize="onResizeRestoreSidebar()">
    <nav class="navbar d-flex justify-content-between navbar-dark bg-dark flex-nowrap sticky-top">
        <button id="burgerMenu" class="d-md-none hamburger hamburger--collapse mr-3" onclick="toggleNav(this)" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
        <a class="navbar-brand col-sm-3 col-md-2 p-0 d-flex justify-content-start mr-auto" asp-controller="Home" asp-action="Index"><img class="d-none d-sm-block" src="~/images/logo.svg" height="25" /></a>
        <partial name="_LoginPartial" />
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sideNav" class="col-md-2 bg-light sidebar border-right pt-4 pt-md-0">
                <div class="sidebar-sticky h-100 pt-5">
                    <ul class="nav flex-column text-light mt-2">
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.AnalyticNavClass(ViewContext)" asp-controller="Analytic" asp-action="Index">
                                <span data-feather="activity"></span>
                                Analytics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.LogNavClass(ViewContext)" asp-controller="Log" asp-action="Index">
                                <span data-feather="file-text"></span>
                                Logs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.AccountNavClass(ViewContext)" asp-controller="Account" asp-action="Index">
                                <span data-feather="users"></span>
                                Accounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.TourNavClass(ViewContext)" asp-controller="Tour" asp-action="Index">
                                <span data-feather="map"></span>
                                Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.TripNavClass(ViewContext)" asp-controller="Trip" asp-action="Index">
                                <span data-feather="layers"></span>
                                Trips
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.DiscountNavClass(ViewContext)" asp-controller="Discount" asp-action="Index">
                                <span data-feather="percent"></span>
                                Discounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.BookingNavClass(ViewContext)" asp-controller="Booking" asp-action="Index">
                                <span data-feather="shopping-bag"></span>
                                Bookings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.InvoiceNavClass(ViewContext)" asp-controller="Invoice" asp-action="Index">
                                <span data-feather="dollar-sign"></span>
                                Invoices
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.BlogNavClass(ViewContext)" asp-controller="Blog" asp-action="Index">
                                <span data-feather="archive"></span>
                                Blog
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ManageNavPages.QuestionNavClass(ViewContext)" asp-controller="Question" asp-action="Index">
                                <span data-feather="message-square"></span>
                                Questions
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Saved reports</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Current month
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main onclick="closeSideNavOnClickOutside(event)" id="mainContent" role="main" class="col-md-9 ml-sm-auto bg-white col-lg-10 pt-3 px-4 position-relative">
                <partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
                @RenderBody()
            </main>
        </div>
    </div>
    <a id="back-to-top" href="#" class="btn btn-secondary btn-lg back-to-top" role="button"><i class="fas fa-chevron-up"></i></a>
    <script>
        feather.replace()
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

