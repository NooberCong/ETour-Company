@using Microsoft.AspNetCore.Identity
@using Infrastructure.InterfaceImpls


@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <div class="dropleft navbar-right">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="myOffSet" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @UserManager.GetUserName(User)
        </button>
        <div class="dropdown-menu bg-dark" aria-labelledby="myOffSet">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-light p-2" title="Manage"><span data-feather="settings"></span> Profile Settings</a>
                    </li>
                    <li>
                        <button type="submit" class="btn btn-link nav-link text-light p-2"><span data-feather="log-out"></span> Log out</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>

}
else
{
    <ul class="nav navbar-nav navbar-right" style="flex-direction: row">
        <li class="nav-item mr-3">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
        </li>
        <li class="nav-item mr-3">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
        </li>
    </ul>

}