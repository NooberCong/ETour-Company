@using Infrastructure.InterfaceImpls;

@model Question

@{
    ViewData["Title"] = Model.Title;
}

<div class="mt-3">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col col-md-5">@Model.Title</div>
                <div class="col col-md-5">@Model.Author.Name</div>
                <div class="col col-md-2">@Model.LastUpdated.ToShortDateString()</div>
            </div>
        </div>
        <div class="card-body">
            <p>@Model.Content</p>
        </div>
    </div>
    <form method="post">
        <div>
            <label asp-for="Answers.<Answer>().Content"></label>
            <input class="form-control" asp-for="Answers.Last<Answer>().Content" />
        </div>
        <a class="btn btn-secondary" asp-action="Index"><span data-feather="arrow-left"></span> Back to list</a>
        <button type="submit" class="btn btn-primary"><span data-feather="save"></span>Answer</button>
    </form>

</div>