@model IEnumerable<Discount>

@{
    ViewData["Title"] = "Discounts";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
    <h1 class="h2">Manage Discounts</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="New" class="btn btn-success ml-auto">Add new<span data-feather="plus"></span></a>
    </div>
</div>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Valid Until</th>
        <th>Type</th>
        <th>Value</th>
        <th>Action</th>
    </tr>
    <tbody>
        @foreach (var disc in Model)
        {
            <tr>
                <td>
                    @disc.Title @if (!disc.IsValid(DateTime.Now))
                    {
                        <span class="badge badge-danger">Invalid</span>
                    }
                </td>
                <td>@disc.ValidUntil</td>
                <td>@disc.Type</td>
                <td>@disc.Value@disc.GetValueSuffix()</td>
                <td class="border-top row">
                    <a style="cursor: pointer" data-toggle="modal" data-target="#trips-@disc.ID" class="text-primary mr-3"><span data-feather="layers" /></a>
                    <a class="text-warning mr-3" asp-action="Edit" asp-route-id="@disc.ID"><span data-feather="edit" /></a>
                    <a style="cursor: pointer" class="text-danger" data-toggle="modal" data-target="#delete-@disc.ID"><span data-feather="trash" /></a>
                </td>
            </tr>
        }
        <tr>
            <td>Sale cuối tuần</td>
            <td>22/05/2021</td>
            <td>Percentage</td>
            <td>10%</td>
            <td class="border-top"><a class="mr-3 text-warning" href="#"><span data-feather="edit" /></a><a class="text-danger" href="#"><span data-feather="trash" /></a></td>

        </tr>
        <tr>
            <td>Sale sinh nhật</td>
            <td>22/05/2021</td>
            <td>Amount</td>
            <td>50$</td>
            <td class="border-top"><a class="mr-3 text-warning" href="#"><span data-feather="edit" /></a><a class="text-danger" href="#"><span data-feather="trash" /></a></td>

        </tr>
        <tr>
            <td>Sale sinh viên</td>
            <td>22/05/2021</td>
            <td>Percentage</td>
            <td>5%</td>
            <td class="border-top"><a class="mr-3 text-warning" href="#"><span data-feather="edit" /></a><a class="text-danger" href="#"><span data-feather="trash" /></a></td>

        </tr>
    </tbody>
</table>

@foreach (var disc in Model)
{
    <div id="trips-@disc.ID" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Trips applied</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="ToggleApply" method="post">
                    <input name="id" value="@disc.ID" hidden />
                    <div class="modal-body">
                        @foreach (var tripDiscount in disc.TripDiscounts)
                        {
                            <div class="row">
                                <a class="font-weight-bold text-primary d-block col-11" asp-action="Detail" asp-controller="Trip">
                                    Trip #@tripDiscount.Trip.ID - @tripDiscount.Trip.Tour.Title
                                    @if (!tripDiscount.Trip.IsOpen)
                                    {
                                        <span class="badge badge-danger">Closed</span>
                                    }
                                </a>
                                <input style="transform: translateY(5px)" name="tripIDs" value="@tripDiscount.TripID" class="d-block col-1" type="checkbox" checked />
                            </div>
                        }
                        @if (!disc.TripDiscounts.Any())
                        {
                            <p class="text-muted">This discount is currently not applied to any trip</p>
                        }
                    </div>
                    <div class="modal-footer">
                        <button disabled="@(!disc.TripDiscounts.Any())" class="btn btn-primary"><span data-feather="save"></span> Save changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div id="delete-@disc.ID" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>This discount be deleted and no longer applied to all the associated trips.</p>
                </div>
                <div class="modal-footer">
                    <form class="d-inline" asp-action="Delete" asp-route-id="@disc.ID" method="post">
                        <button class="btn btn-danger d-inline"><span data-feather="trash"></span> Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}